include ../config_defs

INCLUDE += -I. -I../include -I../src/bil-0.6.0/src
CCFLAGS = -c
CCFLAGS += -g
#CCFLAGS += -Wall
#CCFLAGS += -Wextra
#CCFLAGS += -Wshorten-64-to-32

# architecture
ifeq ($(ARCH), LINUX)
CCFLAGS += -DLINUX
endif
ifeq ($(ARCH), BGP)
CCFLAGS += -DBGP
endif
ifeq ($(ARCH), BGQ)
CCFLAGS += -DBGQ
endif
ifeq ($(ARCH), XKE)
CCFLAGS += -DXKE
endif
ifeq ($(ARCH), MAC)
CCFLAGS += -DMAC
endif

# compression
ifeq ($(ZLIB), YES)
CCFLAGS += -DZLIB
endif

# position-independent code
ifeq ($(FPIC), YES)
CCFLAGS += -fPIC
endif

# openmp
ifeq ($(OPENMP), YES)
CCFLAGS += -DOMP
ifeq ($(ARCH), BGP)
CXX = mpixlcxx_r
CCFLAGS += -O3 -qarch=450d -qtune=450
endif
ifeq ($(ARCH), BGQ)
CXX = mpixlcxx_r
endif
endif

# mpi3
ifeq ($(MPI3), YES)
CCFLAGS += -D_MPI3
endif

# diy core
OBJS = diy.o io.o blocking.o assignment.o neighborhoods.o merge.o util.o swap.o comm.o

# bil
ifeq ($(BIL), YES)
BIL = bil-0.6.0
OBJS += $(BIL)/bil.o $(BIL)/bil_misc.o $(BIL)/bil_sched.o $(BIL)/bil_block.o \
	$(BIL)/bil_pio.o $(BIL)/bil_timing.o
endif

# psort
PSORT = psort
OBJS += $(PSORT)/pmsort.o $(PSORT)/pssort.o $(PSORT)/util.o

.SUFFIXES: .cpp

default: all

ifeq ($(SO), YES) # static and dynamic libs
ifeq ($(ARCH), MAC) # mac
all: libdiy.a libdiy.dylib
else # linux and others
all: libdiy.a libdiy.so
endif
else # only static lib
all: libdiy.a
endif

Makefile: Makefile.in ../config.status
	../config.status $@

config.status: ../configure
	../config.status --recheck

$(OBJS): ../include/*.h

.cpp.o:
	$(CXX) $(CCFLAGS) $(INCLUDE) $<

libdiy.dylib : $(OBJS)
	rm -f $@
	g++ -dynamiclib -Wl,-headerpad_max_install_names,-undefined,dynamic_lookup,-install_name,libdiy.dylib -o libdiy.dylib $(OBJS)
	mv libdiy.dylib ../lib

libdiy.so : $(OBJS)
	rm -f $@
	g++ -shared -Wl,-soname,libdiy.so -o libdiy.so -lc $(OBJS)
	mv libdiy.so ../lib

libdiy.a : $(OBJS)
	rm -f $@
	ar cru $@ $(OBJS) 
	mv libdiy.a ../lib

clean:
	rm -f *.o *.a
